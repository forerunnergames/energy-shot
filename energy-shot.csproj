<Project Sdk="Godot.NET.Sdk/4.3.0">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Required for Godot 4 -->
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <!-- Disable NativeAOT, it breaks Windows exports. -->
    <PublishAOT>false</PublishAOT>
    <!-- GdUnit4 4.3.3 only supports up to 11.0 -->
    <LangVersion>11.0</LangVersion>
    <!-- Keep these mobile language limitations here for future reference, auto-generated by Godot. -->
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net7.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'ios' ">net8.0</TargetFramework>
    <!-- Enforce nullable warnings -->
    <Nullable>enable</Nullable>
    <!-- Disable invalid/incompatible GodotSharp version warnings -->
    <NoWarn>NU1605</NoWarn>
    <RootNamespace>energyshot</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <!-- Root the assemblies to avoid trimming. -->
    <TrimmerRootAssembly Include="GodotSharp" />
    <TrimmerRootAssembly Include="$(TargetName)" />
  </ItemGroup>
  <ItemGroup>
    <!-- Required for GdUnit4 -->
    <PackageReference Include="gdUnit4.api" Version="4.2.5" />
    <!-- Required for GdUnit4 IDE support (Rider, Visual Studio, Visual Studio Code) -->
    <PackageReference Include="gdUnit4.test.adapter" Version="1.1.2" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.10.0" />
  </ItemGroup>
  <ItemGroup>
    <Content Include=".github\workflows\export-and-release.yml" />
    <Content Include=".github\workflows\run-tests.yml" />
    <Content Include="tests\integration\.keep" />
    <Content Include="tests\unit\.keep" />
  </ItemGroup>
